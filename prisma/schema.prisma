generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Car {
  id              String   @id @default(cuid())
  name            String
  price           String
  transmission    String
  fuelType        String
  images          String[] // Array of image URLs
  videos          String[] @default([]) // Array of video URLs
  tiktokUrl       String?  // TikTok video URL
  location        String   @default("Phnom Penh")
  description     String?
  vehicleType     String?  // SUV, Sedan, Hatchback, etc.
  color           String?
  papers          String?  // Tax paper, Blue book, etc.
  sold            Boolean  @default(false)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("cars")
}
