generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Car {
  id              String   @id @default(cuid())
  name            String
  brand           String
  price           Float
  year            Int
  mileage         String
  transmission    String
  fuelType        String
  images          String[] // Array of image URLs
  condition       String
  location        String   @default("Phnom Penh")
  description     String?
  vehicleType     String?  // SUV, Sedan, Hatchback, etc.
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("cars")
}
